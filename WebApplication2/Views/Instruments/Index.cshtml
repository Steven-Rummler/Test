@model IEnumerable<BlowOut.Models.Instrument>

<br />

<div class="jumbotron">
    <h2>Instrument Information</h2>
</div>

<div class="jumbotron">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                Client
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @if (@item.Client != null)
                    {
                        foreach (var quark in item.Client.Instruments)
                        {
                            @:<p>This client owns a @quark.Description</p>
                        }
                    }
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.InstrumentID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.InstrumentID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.InstrumentID })
                </td>
            </tr>
        }

    </table>
    <a class="btn btn-primary" href=@Url.Action("Create", "Instruments")>Create New</a>
</div>