
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css" />
    <title>Queue</title>
</head>
<body>
    <div>
        <ul>
            <li>
                <a href="@Url.Action("AddOne", "Queue")" class="w3-bar-item w3-button">1. Add one item to Queue</a>
            </li>
            <li>
                <a href="@Url.Action("AddList", "Queue")" class="w3-bar-item w3-button">2. Add Huge List of Items to Queue</a>
            </li>
            <li>
                <a href="@Url.Action("DisplayQueue", "Queue")" class="w3-bar-item w3-button">3. Display Queue</a>
            </li>
            <li>
                <a href="@Url.Action("DeleteFrom", "Queue")" class="w3-bar-item w3-button">4. Delete from Queue</a>
            </li>
            <li>
                <a href="@Url.Action("ClearQueue", "Queue")" class="w3-bar-item w3-button">5. Clear Queue</a>
            </li>
            <li>
                <a href="@Url.Action("SearchView", "Queue")" class="w3-bar-item w3-button">6. Search Queue</a>
            </li>
            <li>
                <a href="@Url.Action("Index", "Index")" class="w3-bar-item w3-button">7. Return to Main Menu</a>
            </li>
        </ul>
    </div>
    <div>
        @using (Html.BeginForm("SearchQueue", "Queue", FormMethod.Post))
         {
            <input type="text" name="searchValue" id="searchValue" />
            <input type="submit" value="Search" />
        }
        @Html.Raw((String)ViewBag.DisplayResult)
        @Html.Raw((String)ViewBag.DisplayMyQueue)
    </div>
</body>
</html>
